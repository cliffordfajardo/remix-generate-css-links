{
  "include": ["*.ts","**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module":"CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
