{
  "include": ["*.ts","**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module":"ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true
  }
}
